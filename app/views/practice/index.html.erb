
        <div id="write_box_sign">
                  <div class="container1 col-xs-4">
                        <%=form_tag 'search', method: "get" do %>
                            <div class="form-group">
                                 <input type="string" name="search" placeholder="#검색 키워드를 입력하세요" class="form-control"><br>
                                 <input type="submit" value="검색" class="btn btn-warning">
                            </div>
                        <% end %>
                  </div>
       
                  <div class= "container2 col-xs-11">
                        <%=form_tag '/write', method: 'post' do %>
                            <div class="form-group">
                                  <textarea name="naeyong" placeholder="#검색키워드
  문장을 적으세요" class="form-control" rows="2"></textarea>
                            </div>
                            <div class="form-group">
                                <textarea name="uime" placeholder="의미를 입력하세요" class="form-control" rows="2"></textarea> <br>
                                <input type="submit" class="btn btn-danger">
                            </div>
                           
                        <% end %>
                   </div>
        </div>
            <br>
    
        <div class="content">  
        
                    <p>
                        <ol>
                            <% @note.each do |b| %>
                                <li> 문장 : <%= b.sentence %> <br>
                                     의미 : <%= b.meaning %>  <br>
                                     <a class="btn btn-info btn-xs" href="/edit?id=<%=b.id%>" role="button">수정</a>
                                     <a class="btn btn-info btn-xs" href="/destroy?id=<%=b.id%>" role="button">삭제</a>
                                </li>
                            <% end %>
                        </ol>
                    </p>
      
        </div>
